{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      },
      "alias": {
        "map": [
          ["@", "../backend/src"],
          ["@interactor/shared", "../shared/src"]
        ],
        "extensions": [".ts", ".js", ".tsx", ".json"]
      }
    }
  },
  "rules": {
    // Add or override rules as needed
  }
}